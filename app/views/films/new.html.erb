<%= form_with(model: @film, url: films_path, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: "form-label" %>
    <%= form.number_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :describtion, class: "form-label" %>
    <%= form.text_area :describtion, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :length, class: "form-label" %>
    <%= form.number_field :length, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rating, class: "form-label" %>
    <%= form.number_field :rating, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :actor, class: "form-label" %>
    <%= form.text_field :actor, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :director, class: "form-label" %>
    <%= form.text_field :director, class: "form-control" %>
  </div>

  <%= form.submit "Create", class: "btn btn-primary" %>
<% end %>