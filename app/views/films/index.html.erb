<h1 class="film-list-text">List of films</h1>

<ul class="list-group">
  <% @films.each do |film| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to("#{film.name} #{film.year}", film_path(film)) %>
      <%= link_to("Delete", film_path(film), method: :delete, class: "btn btn-danger") %>
    </li>
  <% end %>
</ul>

<%= will_paginate @films, class: "pagination justify-content-center" %>

<div class="d-flex justify-content-center mt-5">
  <%= link_to "Create new film", new_film_path, class: "btn btn-primary btn-lg" %>
</div>
