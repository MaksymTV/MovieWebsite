<%= form_for @film do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_field :year, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :describtion %>
    <%= f.text_area :describtion, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :actor %>
    <%= f.text_field :actor, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :director %>
    <%= f.text_field :director, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :length %>
    <%= f.text_field :length, class: "form-control" %>
  </div>
  <%= f.submit "Update film", class: "btn btn-primary" %>
<% end %>
